<RelativeLayout
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="#000000"
        xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Data Set ..." android:textSize="16sp" android:textColor="#ffffff"
              android:textStyle="italic" android:layout_alignParentStart="true"
              android:layout_alignParentTop="true" android:layout_margin="10dp"
              android:id="@+id/txtTitleDataSet"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Original" android:layout_alignStart="@id/txtTitleDataSet"
            android:layout_margin="10dp"
            android:layout_below="@id/txtTitleDataSet"
            android:textSize="16sp" android:textStyle="bold" android:padding="10dp"
            android:id="@+id/btnShowOriginalList"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Ordered" android:layout_margin="10dp"
            android:layout_below="@id/txtTitleDataSet" android:layout_toEndOf="@id/btnShowOriginalList"
            android:textSize="16sp" android:textStyle="bold" android:padding="10dp"
            android:id="@+id/btnShowOrderedList"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Analysis ..." android:textSize="16sp" android:textColor="#ffffff"
              android:textStyle="italic" android:layout_alignStart="@id/txtTitleDataSet"
              android:layout_below="@id/btnShowOriginalList" android:layout_margin="10dp"
              android:id="@+id/txtTitleAnalysis"/>

    <ListView android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_below="@id/txtTitleAnalysis" android:layout_margin="10dp"
    android:layout_above="@id/btnCopy" android:scrollbarFadeDuration="0"
    android:scrollbarAlwaysDrawVerticalTrack="true" android:scrollbars="vertical"
    android:scrollbarStyle="outsideInset"
    android:scrollbarThumbVertical="@color/scrollColor"
    android:id="@+id/lstResults">




    </ListView>





    <ImageButton
            android:id="@+id/btnShare"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:tint="#072CE4"
            android:src="@drawable/ic_share"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp" />

    <ImageButton
            android:id="@+id/btnBackToInput"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_back"
            android:tint="#ff0000"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"/>

    <ImageButton
            android:id="@+id/btnCopy"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:tint="#FC3C00"
            android:src="@drawable/ic_copy"
            android:layout_marginBottom="16dp"/>



</RelativeLayout>
