<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:layout_alignParentStart="true" android:layout_alignParentTop="true"
              android:textColor="#2196F3" android:text="Add numbers by clicking on the (+) below ..."
              android:textStyle="italic" android:padding="10dp" android:textSize="16sp"
              android:id="@+id/txtMsg_OneByOne"/>

    <TextView android:layout_width="match_parent" android:layout_height="match_parent"
              android:padding="10dp" android:textSize="16sp" android:textColor="#ffffff"
              android:scrollbars="vertical"
              android:layout_above="@id/btnCalcOneByOne" android:layout_below="@id/txtMsg_OneByOne"
              android:layout_marginBottom="5dp"
              android:background="#131212"
              android:scrollbarAlwaysDrawVerticalTrack="true" android:scrollbarFadeDuration="0"
              android:id="@+id/txtOneByOne"/>

    <ImageButton
            android:id="@+id/btnEnterOneByOne"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:tint="#89FF00"
            android:background="#00000000"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_add_number"
            android:layout_marginBottom="16dp" />


    <ImageButton
            android:id="@+id/btnCalcOneByOne"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:tint="#3F51B5"
            android:src="@drawable/ic_calc"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"/>

</RelativeLayout>